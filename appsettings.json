{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Scoring": {
    "DefaultLocationWeight": 1.5,
    "DefaultAgeWeight": 2.0,
    "DefaultInterestsWeight": 1.8,
    "DefaultEducationWeight": 1.0,
    "DefaultLifestyleWeight": 2.5,
    "MinimumCompatibilityThreshold": 60.0,
    "DefaultMaxDistance": 50.0,
    "ScoreCacheHours": 24,
    "ChildrenMismatchPenalty": 30.0,
    "SmokingMismatchPenalty": 20.0,
    "DrinkingMismatchPenalty": 15.0,
    "ReligionMismatchPenalty": 10.0
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "https://auth.yourdatingapp.com/realms/DatingApp",
      "ClientId": "matchmaking-service",
      "Audience": "matchmaking-service",
      "RequireHttpsMetadata": true
    }
  },
  "Gateway": {
    "BaseUrl": "http://dejting-yarp:8080"
  },
  "Services": {
    "MessagingService": "http://messaging-service:8086"
  }
}
