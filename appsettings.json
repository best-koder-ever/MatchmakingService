{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Scoring": {
    "DefaultLocationWeight": 1.5,
    "DefaultAgeWeight": 2.0,
    "DefaultInterestsWeight": 1.8,
    "DefaultEducationWeight": 1.0,
    "DefaultLifestyleWeight": 2.5,
    "MinimumCompatibilityThreshold": 60.0,
    "DefaultMaxDistance": 50.0,
    "ScoreCacheHours": 24,
    "ChildrenMismatchPenalty": 30.0,
    "SmokingMismatchPenalty": 20.0,
    "DrinkingMismatchPenalty": 15.0,
    "ReligionMismatchPenalty": 10.0,
    "ActivityScoreWeight": 0.5,
    "HasChildrenMismatchPenalty": 15.0,
    "ActivityScoreHalfLifeDays": 7.0
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "https://auth.yourdatingapp.com/realms/DatingApp",
      "ClientId": "matchmaking-service",
      "Audience": "matchmaking-service",
      "RequireHttpsMetadata": true
    }
  },
  "Gateway": {
    "BaseUrl": "http://dejting-yarp:8080"
  },
  "Services": {
    "MessagingService": "http://messaging-service:8086"
  },
  "DailySuggestionLimits": {
    "MaxDailySuggestions": 50,
    "RefreshIntervalHours": 24,
    "PremiumMaxDailySuggestions": 150,
    "EnableQueueExpansion": true
  },
  "CandidateOptions": {
    "Strategy": "Auto",
    "DefaultLimit": 20,
    "MaxLimit": 50,
    "DefaultMinScore": 0,
    "ActiveWithinDays": 30,
    "OnlyShowVerifiedDefault": false,
    "FallbackToLiveOnError": true,
    "AutoStrategyThresholds": {
      "LiveMaxUsers": 10000,
      "PreComputedMaxUsers": 500000
    },
    "BackgroundScoring": {
      "Enabled": true,
      "RefreshIntervalMinutes": 30,
      "MaxUsersPerCycle": 100,
      "OnlyRefreshActiveUsers": true,
      "ScoreTtlHours": 24,
      "SkipRefreshWhenCpuAbove": 80,
      "MaxConcurrentScoring": 5
    },
    "DailyPicks": {
      "Enabled": false,
      "PicksPerUser": 10,
      "GenerationTimeUtc": "03:00",
      "ExpiryHours": 24
    }
  }
}